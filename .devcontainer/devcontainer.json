{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    // Run Bash script in .devcontainer directory
	"postCreateCommand": "/bin/bash ./.devcontainer/post-create.sh > ./.devcontainer/post-create.log",
	// "postStartCommand": "/bin/bash ./.devcontainer/post-start.sh > ./.devcontainer/post-start.log",
	// "postAttachCommand": "/bin/bash ./.devcontainer/post-attach.sh > ./.devcontainer/post-attach.log",
	"customizations": {
		"vscode": {
			"extensions": [
				"maziac.asm-code-lens",
				"maziac.dezog",
				"maziac.hex-hover-converter",
				"maziac.z80-instruction-set",
				"maziac.sna-fileviewer",
				"maziac.nex-fileviewer",
				"ms-vscode-remote.remote-containers"
			]
		}
	}
}